<?xml version="1.0" encoding="UTF-8"?>
<ui version="4.0">
 <class>MainWindow</class>
 <widget class="QMainWindow" name="MainWindow">
  <property name="windowTitle">
   <string>To-Do List</string>
  </property>
  <widget class="QWidget" name="centralwidget">
   <layout class="QVBoxLayout" name="verticalLayout">

    <!-- 🔹 Sección de entrada de datos -->
    <item>
     <layout class="QHBoxLayout" name="horizontalInputLayout">

      <!-- Título -->
      <item>
       <widget class="QLineEdit" name="input_title">
        <property name="placeholderText">
         <string>Título de la tarea</string>
        </property>
       </widget>
      </item>

      <!-- Descripción -->
      <item>
       <widget class="QTextEdit" name="input_description">
        <property name="placeholderText">
         <string>Descripción de la tarea</string>
        </property>
       </widget>
      </item>

      <!-- Fecha de vencimiento -->
      <item>
       <widget class="QDateEdit" name="input_due_date">
        <property name="calendarPopup">
         <bool>true</bool>
        </property>
       </widget>
      </item>

      <!-- Prioridad -->
      <item>
       <widget class="QComboBox" name="input_priority">
        <property name="toolTip">
         <string>Prioridad de la tarea</string>
        </property>
        <item><property name="text"><string>Baja</string></property></item>
        <item><property name="text"><string>Media</string></property></item>
        <item><property name="text"><string>Alta</string></property></item>
       </widget>
      </item>

      <!-- Categoría -->
      <item>
       <widget class="QComboBox" name="input_category">
        <property name="toolTip">
         <string>Categoría de la tarea</string>
        </property>
        <item><property name="text"><string>Trabajo</string></property></item>
        <item><property name="text"><string>Hogar</string></property></item>
        <item><property name="text"><string>Estudio</string></property></item>
       </widget>
      </item>

     </layout>
    </item>

    <!-- 🔹 Botones de acciones -->
    <item>
     <layout class="QHBoxLayout" name="buttonLayout">

      <item>
       <widget class="QPushButton" name="btn_add">
        <property name="text"><string>Agregar ➕</string></property>
       </widget>
      </item>

      <item>
       <widget class="QPushButton" name="btn_update">
        <property name="text"><string>Actualizar 🔄</string></property>
       </widget>
      </item>

      <item>
       <widget class="QPushButton" name="btn_delete">
        <property name="text"><string>Eliminar ❌</string></property>
       </widget>
      </item>

      <!-- Restaurar -->
      <item>
       <widget class="QPushButton" name="btn_restore">
        <property name="text"><string>Restaurar ♻️</string></property>
       </widget>
      </item>

      <!-- ✅ Nuevo botón: Eliminar definitivo -->
      <item>
       <widget class="QPushButton" name="btn_delete_forever">
        <property name="text"><string>Eliminar Definitivo 🗑️</string></property>
       </widget>
      </item>

      <item>
       <widget class="QPushButton" name="btn_complete">
        <property name="text"><string>Marcar Completada ✅</string></property>
       </widget>
      </item>

      <item>
       <widget class="QPushButton" name="btn_favorite">
        <property name="text"><string>Marcar Favorita ⭐</string></property>
       </widget>
      </item>

     </layout>
    </item>

    <!-- 🔹 Filtro por fecha + Mostrar eliminadas -->
    <item>
     <layout class="QHBoxLayout" name="filterLayout">

      <item>
       <widget class="QPushButton" name="btn_filter">
        <property name="text"><string>Filtrar por fecha 📆</string></property>
       </widget>
      </item>

      <!-- Botón para ver eliminadas -->
      <item>
       <widget class="QPushButton" name="btn_show_deleted">
        <property name="text"><string>Ver Eliminadas 🗑️</string></property>
       </widget>
      </item>

     </layout>
    </item>

    <!-- 🔹 Lista de tareas -->
    <item>
     <widget class="QListWidget" name="list_tasks"/>
    </item>

   </layout>
  </widget>
  <layoutdefault spacing="6" margin="11"/>
  <resources/>
  <connections/>
 </widget>
</ui>
